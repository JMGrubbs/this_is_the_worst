<%= form_with model: @recipe do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :user_id %>
    <%= f.collection_select :user_id, User.all, :id, :name %>
    <%= f.fields_for :recipe_ingredients do |ing| %>
             
        <%= ing.text_field :recipe_id %>
        <%= ing.text_field :ingredient_id %>
        <%= ing.text_field :name %>
    <% end %>
    <%= f.submit %>
<% end %>